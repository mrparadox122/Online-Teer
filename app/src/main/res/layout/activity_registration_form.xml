<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Registration_form"
    android:background="#ffffff"
    >

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_26sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/registration_back_btn"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:background="@drawable/baseline_arrow_back_24"
        />

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/logo_img_view_registration_form"
        android:layout_width="@dimen/_119sdp"
        android:layout_height="@dimen/_136sdp"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/Registration_form_text"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_162sdp"
        android:fontFamily="@font/coda"
        android:text="REGISTRATION FORM"
        android:textColor="#B18CFF"
        android:textSize="@dimen/_20sdp" />

        <EditText
            android:id="@+id/edittext_full_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/Registration_form_text"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_shape"
            android:backgroundTint="#EB591E87"
            android:hint="Full Name : Enter Your Name"
            android:paddingStart="@dimen/_15sdp"
            android:singleLine="true"
            android:textColor="#DFDFDF"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#9EDFDFDF"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:id="@+id/edittext_user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/edittext_full_name"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_shape"
            android:backgroundTint="#EB591E87"
            android:hint="Username : Create Username"
            android:paddingStart="@dimen/_14sdp"
            android:singleLine="true"
            android:textColor="#9EDFDFDF"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#9EDFDFDF"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:id="@+id/edittext_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/edittext_user_name"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_shape"
            android:backgroundTint="#EB591E87"
            android:hint="Number : Phone number to verify(OTP)"
            android:inputType="number"
            android:paddingStart="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#9EDFDFDF"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#9EDFDFDF"
            android:textSize="@dimen/_13sdp" />

        <EditText
            android:id="@+id/edittext_pass_word"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@+id/edittext_number"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_shape"
            android:backgroundTint="#B18CFF"
            android:hint="Password : Create your password"
            android:paddingStart="@dimen/_15sdp"
            android:singleLine="true"
            android:textColor="#96591E87"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#96591E87"
            android:textSize="@dimen/_13sdp" />


        <EditText
            android:id="@+id/Edittext_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_38sdp"
            android:layout_below="@id/edittext_pass_word"
            android:layout_marginStart="@dimen/_26sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_26sdp"
            android:background="@drawable/custom_edit_shape"
            android:backgroundTint="#B18CFF"
            android:hint="Password : Confirm your password"
            android:paddingStart="@dimen/_15sdp"
            android:singleLine="true"
            android:textColor="#96591E87"
            android:paddingEnd="@dimen/_5sdp"
            android:textColorHint="#96591E87" />



        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:layout_below="@id/Edittext_confirm_password"
            android:layout_marginStart="@dimen/_27sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="I accpet Terms and Condition..!"
            android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_OTP_btn"
        android:layout_width="@dimen/_245sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/checkbox"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edit_shape"
        android:backgroundTint="#B18CFF"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:paddingStart="@dimen/_65sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingEnd="@dimen/_50sdp"/>

    <EditText
        android:id="@+id/Edittext_referral_code"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_below="@id/send_OTP_btn"
        android:layout_marginStart="@dimen/_26sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_26sdp"
        android:background="@drawable/custom_edit_shape"
        android:backgroundTint="#EB591E87"
        android:hint="Referral : Referral Code (Optional)"
        android:paddingStart="@dimen/_15sdp"
        android:singleLine="true"
        android:textColor="#9EDFDFDF"
        android:paddingEnd="@dimen/_5sdp"
        android:textColorHint="#9EDFDFDF"
        android:textSize="@dimen/_13sdp"/>

    <TextView
        android:id="@+id/login_existing_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="Login Existing Account"
        android:textSize="@dimen/_13sdp"
        android:layout_below="@+id/Edittext_referral_code"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginTop="@dimen/_10sdp"
        />



</RelativeLayout>