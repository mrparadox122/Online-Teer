<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Login_screen"
    android:background="@drawable/login">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/logo_img_view"
        android:layout_width="@dimen/_119sdp"
        android:layout_height="@dimen/_136sdp"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:src="@drawable/logo"
        android:layout_marginTop="@dimen/_101sdp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/login_to_your_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_img_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="Login to your account"
        android:textColor="@color/black"
        android:textSize="@dimen/_22sdp" />

    <EditText
        android:id="@+id/edittext_login_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/custom_edit_shape"
        android:backgroundTint="#EB591E87"
        android:layout_below="@id/login_to_your_account"
        android:layout_marginTop="@dimen/_23sdp"
        android:layout_marginStart="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_19sdp"
        android:drawableStart="@drawable/outline_person_outline_24"
        android:drawablePadding="@dimen/_3sdp"
        android:hint="Username"
        android:paddingStart="@dimen/_9sdp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15sdp"
        />

    <EditText
        android:id="@+id/edittext_login_password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_42sdp"
        android:background="@drawable/custom_edit_shape"
        android:backgroundTint="#EB591E87"
        android:layout_marginTop="@dimen/_22sdp"
        android:layout_below="@+id/edittext_login_username"
        android:layout_marginStart="@dimen/_19sdp"
        android:layout_marginEnd="@dimen/_19sdp"
        android:drawablePadding="@dimen/_3sdp"
        android:hint="Password"
        android:drawableStart="@drawable/baseline_lock_open_24"
        android:paddingStart="@dimen/_9sdp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15sdp"
        />

    <TextView
        android:id="@+id/forget_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext_login_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_14sdp"
        android:text="@string/Forget_password"
        android:textColor="#B275E2"
        android:textSize="@dimen/_14sdp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="@dimen/_191sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@+id/forget_password_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/custom_edit_shape"
        android:backgroundTint="#B18CFF"
        android:drawableEnd="@drawable/baseline_login_24"
        android:drawablePadding="2dp"
        android:fontFamily="@font/ibarra_real_nova"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/_50sdp"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dont_have_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginStart="@dimen/_65sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="Don't have an account?"
        android:layout_marginBottom="@dimen/_50sdp"
        android:textSize="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/register_an_account_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_toEndOf="@id/dont_have_account_login"
        android:text="@string/Register_an_account"
        android:textColor="#E6B18CFF"
        android:layout_marginBottom="@dimen/_50sdp"
        android:textSize="@dimen/_11sdp"
        />

</RelativeLayout>